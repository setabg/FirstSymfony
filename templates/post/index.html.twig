{% extends('base.html.twig')  %}

{% block body%}
   <h2>List of all posts</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}">
                        {{ post.title }}
                    </a>
                </td>
                <td>
                    <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}